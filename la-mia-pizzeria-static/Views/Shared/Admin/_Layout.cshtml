<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/img/logoSeaShark.ico">
    <title>@ViewData["Title"] - Admin Pizzeria SeaShark</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/la_mia_pizzeria_static.styles.css" asp-append-version="true" />
    @RenderSection("Style", required: false)
</head>
<body>

    @Html.Partial("Admin/Partials/_Header")

    <main>
        <div class="container-fluid">
            <div class="row">
                <div class="sidebar col-12 col-md-4 col-lg-3 px-0 bg-white border-end">
                    @Html.Partial("Admin/Partials/_Sidebar")
                </div>
                <div class="content col-12 col-md-8 col-lg-9 p-3">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>

    @Html.Partial("Admin/Partials/_Footer")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
